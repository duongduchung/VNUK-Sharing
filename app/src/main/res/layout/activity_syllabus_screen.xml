<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_syllabus_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.edu.vnuk.vnuk_sharing.Functional.SyllabusScreen">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/Cardinal"
        android:elevation="6dp"

        android:theme="@style/AppTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <ImageView
            android:id="@+id/imageView"
            android:layout_margin="30dp"
            android:layout_width="256dp"
            android:layout_height="232dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/pdf" />

        <TextView
            android:id="@+id/lb_name_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lb_name_file"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/lb_size_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lb_size_file"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"            />
    </LinearLayout>

</RelativeLayout>
