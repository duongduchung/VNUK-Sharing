<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_functional_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.edu.vnuk.vnuk_sharing.Functional.FunctionalScreen">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/Cardinal"
        android:elevation="6dp"
        android:theme="@style/AppTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ListView
        android:layout_below="@+id/toolbar"
        android:id="@+id/list_view_function"
        android:layout_width="wrap_content"
        android:layout_height="400px">

    </ListView>

    <TextView
        android:id="@+id/lbThu"
        android:layout_below="@+id/list_view_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
