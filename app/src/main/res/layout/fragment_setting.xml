<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="6dp"
        android:background="@color/Cardinal"
        android:theme="@style/AppTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TableRow
        android:padding="@dimen/size_normal">

        <Button
            android:id="@+id/btn_aboutus"
            android:text="About us"
            android:textSize="25dp"
            android:background="@color/Grey"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:padding="@dimen/size_normal">
        <TextView
            android:id="@+id/tv_notiDeadlines"
            android:text="Notification Deadlines"
            android:textSize="@dimen/size_big"
            android:textColor="@color/Black"
            android:layout_weight="2"/>
        <Switch
            android:id="@+id/btn_notiDeadlines"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:padding="@dimen/size_normal">
        <TextView
            android:id="@+id/tv_notiAnnoucement"
            android:text="Notification Day-off"
            android:textSize="@dimen/size_big"
            android:textColor="@color/Black"
            android:layout_weight="2"/>
        <Switch
            android:id="@+id/btn_notiAnnoucement"
            android:layout_weight="1"/>
    </TableRow>
</TableLayout>